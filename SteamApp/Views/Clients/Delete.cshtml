@model SteamApp.Models.Client
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Delete", "Clients"))
{
    <h2>
        Delete Confirmation
    </h2>

    <div>
        <text>
            Please confirm if you want to delete this client:<br />
            @Model.Name
        </text>
    </div>

    <script>
        <input name="confirmButton" type="submit" value="Delete"
           onclick="return confirm('Are you sure you want to delete record with ID = @Model.ClientID');" />

    </script>
    
}
