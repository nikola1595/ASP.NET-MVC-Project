@model SteamApp.Models.Game
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Delete", "Games"))
{
    <h2>
        Delete Confirmation
    </h2>

    <div>
        <text>
            Please confirm if you want to delete this game:<br />

        </text>

       Name: @Model.Name<br />
       CategoryID: @Model.CategoryID<br />
       Game for: @Model.GameFor<br />
      Game published:  @Model.GameYearPublished<br />
    </div>

    
        <input name="confirmButton" type="submit" value="Delete"
           onclick="return confirm('Are you sure you want to delete record with ID = @Model.GameID');" />

   

}


